{
    "manifest_version": 2,
    "name": "The wikitionary Dicitionary!",
    "version": "2.0",
    "description": "Select a word and instantly view it's Wikitionary definition in a floating popup.",
    "permissions": [
        "activeTab",
        "https://en.wiktionary.org/"
    ],
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "wikitionary-translator@example.com",
            "strict_min_version": "140.0",
            "data_collection_permissions": {
                "required": ["websiteContent"],
                "websites": false,
                "user_behavior": false
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "translationfns.js",
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}