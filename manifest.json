{
    "manifest_version": 2,
    "name": "The wikitionary Dicitionary!",
    "version": "2.1",
    "description": "Select a word and instantly view it's Wikitionary definition in a floating popup.",
    "permissions": [
        "activeTab",
        "https://en.wiktionary.org/",
        "https://upload.wikimedia.org/*",
        "https://commons.wikimedia.org/",
        "https://translate.google.com/*"
    ],
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "wikitionary-translator@example.com",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "websiteContent"
                ],
                "websites": false,
                "user_behavior": false
            }
        }
    },
    "background": {
        "scripts":["messaging.js"],
        "presistent":"false"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "translationfns.js",
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_icon": "icons/icon128.png",
        "default_popup": "popup.html"
    }
}